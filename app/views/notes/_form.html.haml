- note = @job.document.notes.new
= form_for note, url: notes_path(@job.document, note), class: 'document_note_form' do |f|
  - if note.errors.any?
    #error_explanation
      %h2= "#{pluralize(note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - note.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'Note'
    = f.text_field :body
  .actions
    = f.submit 'Save Note', class: 'primary_button', id: 'save_note'
