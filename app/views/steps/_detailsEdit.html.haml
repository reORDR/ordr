= render "steps/header"

%section.step_content
  = form_for @job, url: job_path(@job) do |f|
    = hidden_field_tag :success_redirect, content_job_path(@job, step: :details)
    = hidden_field_tag :failure_redirect, content_edit_job_path(@job, step: :details)
    = f.label :title, 'Job Title'
    = f.text_field :title
    = f.label :url
    = f.text_field :url
    = f.label :company_name
    = f.text_field :company_name
    = f.label :due_date, 'Apply By'
    = f.date_field :due_date
    = f.label :source, 'How did you find this job?'
    = f.text_field :source
    = f.submit 'Save', { class: 'primary_button' }
